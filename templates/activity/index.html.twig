{% extends 'admin.html.twig' %}
{% block title %} {{ 'Domaines d\'activités' }} {% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des domaines d\'activité'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('activity_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Nom' }}</th>
                        <th>{{ 'Date de creation' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Nom' }}</th>
                        <th>{{ 'Date de creation' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for activity in activities %}
                        <tr>
                            <td>{{ activity.name }}</td>
                            <td>{{ activity.created ? activity.created|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('activity_show', {'id': activity.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('activity_edit', {'id': activity.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
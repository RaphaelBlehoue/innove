{% extends 'base.html.twig' %}
{% block title %}
    {{ 'Nos Services | Intégrateur de solutions innovantes' }}
{% endblock %}
{% block base_nav %} {{ include('front/includes/nav.html.twig',{'nav_class':'c-layout-header-4 c-layout-header-default-mobile'}) }} {% endblock %}
{% block slide %}
    {{ include('front/includes/slide.html.twig') }}
{% endblock %}
{% block body %}
    <!-- BEGIN: CONTENT/SERVICE QUE NOUS OFFRONS -->
    <div class="c-content-box c-size-md c-bg-white">
        <div class="container">
            <div class="c-content-feature-2-grid" data-auto-height="true" data-mode="base-height">
                <div class="c-content-title-1">
                    <h3 class="c-font-uppercase c-center c-font-bold">{{ 'Ce que nous vous offrons comme services' }}</h3>
                    <div class="c-line-center"></div>
                </div>
                <div class="row">
                    <div class="c-content-blog-post-card-1-grid">
                        <div class="row">
                            {% for i in 1..8 %}
                                <div class="col-md-6 col-sm-4">
                                    <div class="c-content-feature-2  c-shadow" data-height="height">
                                        <h3 class="c-font-uppercase c-font-bold c-theme-font c-center c-title">{{ 'service '~ loop.index }}</h3>
                                        <p>Lorem ipsum consectetuer dolore elit diam</p>
                                        <div class="c-center c-margin-t-50">
                                            <a href="" class="btn btn-sm c-btn-green-1 c-btn-uppercase c-btn-square c-btn-bold">{{  'plus de détail' }}</a>
                                            <a href="" class="btn btn-sm c-btn-green-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">{{  'je suis intéressé' }}</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/SERVICES QUE NOUS OFFRONS -->
    <!-- BEGIN: CONTENT/DEVIS -->
    <div class="c-content-box c-size-md c-bg-parallax" style="background-image: url(http://via.placeholder.com/1920x1080)">
        <div class="container">
            <div class="c-content-bar-4">
                <h3 class="c-font-uppercase c-font-bold">{{ 'Vous avez besoins d\'une offre sur mesure ?' }}</h3>
                <div class="c-actions">
                    <a href="#" class="btn btn-md c-btn-green-1 c-btn-uppercase c-btn-square c-btn-bold c-margin-b-100">{{ 'Cliquez ici pour nous détailler votre besoins' }}</a>
                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/BARS/BAR-5 -->

{% endblock %}

{% block javascripts %}
    <!-- BEGIN: PAGE SCRIPTS -->
    <script src="{{ asset('build/layout/assets/plugins/revo-slider/js/extensions/revolution.extension.kenburn.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('build/layout/assets/plugins/revo-slider/js/extensions/revolution.extension.parallax.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('build/layout/assets/demos/default/js/scripts/revo-slider/slider-13.js') }}" type="text/javascript"></script>
    <!-- END: PAGE SCRIPTS -->
{% endblock %}


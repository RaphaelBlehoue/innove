{% extends 'base.html.twig' %}
{% block title %}
    {{  'Nos services | Intégrateur de solutions innovantes' }}
{% endblock %}
{% block slide %}
    <div class="c-layout-breadcrumbs-1 c-bgimage-full c-fonts-uppercase c-fonts-bold c-bg-img-center" style="background-image: url({{ asset('build/web/static/slides/slide_service.jpg') }})">
        <div class="c-breadcrumbs-wrapper">
            <div class="container">
                <div class="c-page-title c-pull-left">
                    <h3 class="c-font-uppercase c-font-bold c-font-white c-font-20 c-font-slim c-opacity-09">Ce que nous offrons comme services</h3>
                </div>
                <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
                    <li><a href="{{ path('homepage') }}" class="c-font-white">{{ 'Accueil' }}</a></li>
                    <li class="c-font-white">/</li>
                    <li class="c-font-white">{{ 'Nos services' }}</li>
                </ul>
            </div>
        </div>
    </div><!-- END: LAYOUT/BREADCRUMBS/BREADCRUMBS-4 -->
{% endblock %}
{% block body %}
    <!-- BEGIN: CONTENT/SERVICE QUE NOUS OFFRONS -->
    <div class="c-content-box c-size-md c-bg-white">
        <div class="container">
            <div class="c-content-feature-2-grid" data-auto-height="true" data-mode="base-height">
                <div class="c-content-title-1">
                    <h3 class="c-font-uppercase c-center c-font-bold">{{ 'Ce que nous vous offrons comme services' }}</h3>
                    <div class="c-line-center"></div>
                </div>
                <div class="row">
                    <div class="c-content-blog-post-card-1-grid">
                        <div class="row">
                            {% for service in services %}
                                <div class="col-md-6 col-sm-4" id="s{{ service.slug }}">
                                    <div class="c-content-feature-2  c-shadow" data-height="height">
                                        <h3 class="c-font-uppercase c-font-bold c-theme-font c-center c-title c-margin-b-30">{{ service.title }}</h3>
                                        <p>{{ service.content|raw}}</p>
                                        <div class="c-center c-margin-t-50">
                                            <a href="{{ path('contact') }}" class="btn btn-sm c-btn-green-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">{{  'je suis intéressé' }}</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/SERVICES QUE NOUS OFFRONS -->
    <!-- BEGIN: CONTENT/DEVIS -->
    <div class="c-content-box c-size-md c-bg-parallax" style="background-image: url({{ asset('build/web/static/contact_bg.jpg') }})">
        <div class="container">
            <div class="c-content-bar-4">
                <h3 class="c-font-uppercase c-font-bold">{{ 'Besoin d\'un service pour votre entreprise ?' }}</h3>
                <div class="c-actions">
                    <a href="{{ path('contact') }}" class="btn btn-md c-btn-green-1 c-btn-uppercase c-btn-square c-btn-bold c-margin-b-100">{{ 'cliquez ici pour nous appelez' }}</a>
                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/BARS/BAR-5 -->

{% endblock %}

{% block javascripts %}
    <!-- BEGIN: PAGE SCRIPTS -->
    <script src="{{ asset('build/layout/assets/plugins/revo-slider/js/extensions/revolution.extension.kenburn.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('build/layout/assets/plugins/revo-slider/js/extensions/revolution.extension.parallax.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('build/layout/assets/demos/default/js/scripts/revo-slider/slider-13.js') }}" type="text/javascript"></script>
    <!-- END: PAGE SCRIPTS -->
{% endblock %}


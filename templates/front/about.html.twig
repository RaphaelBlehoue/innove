{% extends 'base.html.twig' %}
{% block title %}
    {{  'Qui sommes nous | Intégrateur de solutions innovantes' }}
{% endblock %}
{% block slider %}
    <!-- start page title section -->
    <section class="wow fadeIn cover-background background-position-top top-space" style="background-image:url({{ asset('build/global/images/about-banner.jpg') }});">
        <div class="opacity-medium bg-extra-dark-gray"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 display-table page-title-large">
                    <div class="display-table-cell vertical-align-middle text-center padding-30px-tb">
                        <!-- start sub title -->
                        <span class="display-block text-white opacity6 alt-font margin-5px-bottom">{{ 'Qui sommes nous' }}</span>
                        <!-- end sub title -->
                        <!-- start page title -->
                        <h1 class="alt-font text-white font-weight-600 no-margin-bottom">{{ 'innove IT & Consulting' }}</h1>
                        <!-- end page title -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end page title section -->
{% endblock %}
{% block body %}
    <!-- start about agency -->
    <section class="wow fadeIn bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-11 col-xs-12 center-col text-center wow fadeInUp margin-eight-bottom">
                    <div class="alt-font text-medium-gray margin-5px-bottom text-uppercase text-small">{{ 'Notre Objectif & Pourquoi travailler avec nous' }}</div>
                    <h6 class="font-weight-300 text-extra-dark-gray no-margin-bottom"><strong class="font-weight-400">{{ 'Bonne gestion financière, communication & Productivité ...' }}</strong></h6>
                    <p>{{ "Nous vous propose ainsi de combiner le professionnaliste et l'originalité avec l'intégration de solutions informatiques pour optimiser et rendre fluide votre gestion ; l’audit et le conseil en informatique et télécom pour vous guider ; la création de site internet pour votre communication et votre visibilité et la conception d'applications orientées web extranets, intranets, aux applications métiers souples et évolutifs, pour optimiser votre productivité" }}</p>
                </div>
            </div>
            <div class="row equalize xs-equalize-auto">
                <!-- start features box item -->
                <div class="col-md-4 col-sm-4 col-xs-12 sm-margin-four-bottom xs-margin-30px-bottom wow fadeInUp">
                    <div class="bg-white text-center">
                        <img src="{{ asset('build/global/images/latest-blog6.jpg') }}" alt="">
                        <div class="padding-45px-all sm-padding-15px-all inner-match-height">
                            <span class="text-extra-dark-gray font-weight-600 display-block alt-font margin-10px-bottom">{{ 'Avantage 1' }}</span>
                            <p>Lorem Ipsum is simply text of the printing and typesetting industry. Lorem Ipsum has been standard dummy.</p>
                        </div>
                    </div>
                </div>
                <!-- end feature box item -->
                <!-- start features box item -->
                <div class="col-md-4 col-sm-4 col-xs-12 sm-margin-four-bottom xs-margin-30px-bottom wow fadeInUp" data-wow-delay="0.2s">
                    <div class="bg-white text-center">
                        <img src="{{ asset('build/global/images/latest-blog5.jpg') }}" alt="">
                        <div class="padding-45px-all sm-padding-15px-all inner-match-height">
                            <span class="text-extra-dark-gray font-weight-600 display-block alt-font margin-10px-bottom">{{ 'Avantage 2' }}</span>
                            <p>Lorem Ipsum is simply text of the printing and typesetting industry. Lorem Ipsum has been standard dummy.</p>
                        </div>
                    </div>
                </div>
                <!-- end feature box item -->
                <!-- start features box item -->
                <div class="col-md-4 col-sm-4 col-xs-12 sm-margin-four-bottom xs-no-margin-bottom wow fadeInUp" data-wow-delay="0.4s">
                    <div class="bg-white text-center">
                        <img src="{{ asset('build/global/images/latest-blog7.jpg') }}" alt="">
                        <div class="padding-45px-all sm-padding-15px-all inner-match-height">
                            <span class="text-extra-dark-gray font-weight-600 display-block alt-font margin-10px-bottom">{{ 'Avantage 3' }}</span>
                            <p>Lorem Ipsum is simply text of the printing and typesetting industry. Lorem Ipsum has been standard dummy.</p>
                        </div>
                    </div>
                </div>
                <!-- end feature box item -->
            </div>
        </div>
    </section>
    <!-- end about agency section -->

    <!-- start story section -->
    <section class="wow fadeIn animated animated">
        <div class="container">
            <div class="row equalize sm-equalize-auto">
                <div class="col-md-5 col-sm-12 col-xs-12 text-center sm-margin-30px-bottom wow fadeInLeft">
                    <div class="display-table width-100 height-100">
                        <div class="display-table-cell vertical-align-middle width-100 height-100">
                            <img src="{{ asset('build/global/images/about-img3.jpg') }}" alt="{{ 'Qui sommes nous' }}" class="border-radius-6 width-100">
                        </div>
                    </div>
                </div>
                <div class="col-md-7 col-sm-12 col-xs-12 wow fadeInRight" data-wow-delay="0.2s">
                    <div class="display-table width-100 height-100">
                        <div class="display-table-cell vertical-align-middle padding-twelve-lr sm-text-center sm-no-padding width-100">
                            <span class="text-deep-pink alt-font margin-10px-bottom display-inline-block text-medium">{{ 'La solution de l\'envisageable à l’indispensable' }}</span>
                            <h6 class="alt-font text-extra-dark-gray">{{ 'Intégrateur Sage, EBP, Ciel et diverses solutions informatiques' }}</h6>
                            <p>Nous disposons d'une équipe innovante avec des talents, des compétences, de l'expérience des savoir-faire et des savoirs-être engagés à réussir vos projets à court et à long termes dans le domaine des TIC. Elle est spécialisée dans les environnements systèmes: système d’information, systèmes de gestion informatisée, réseau & télécoms.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="divider-full bg-extra-light-gray margin-seven-bottom margin-eight-top"></div>
            <!-- start feature box -->
            <div class="row">
               {% for service in services %}
                <!-- start feature box item -->
                <div class="col-md-3 col-sm-3 col-xs-12 xs-margin-15px-bottom xs-text-center wow fadeInUp" data-wow-delay="0.2s">
                    <div class="col-md-3 col-sm-4 col-xs-12 no-padding-left xs-no-padding-lr pull-left xs-margin-15px-bottom">
                        <i class="icon-book-open text-medium-gray icon-extra-medium top-6"></i>
                    </div>
                    <div class="col-md-9 col-sm-8 col-xs-12 no-padding">
                        <a href="{{ path('services') }}#services"><span class="margin-5px-bottom text-extra-dark-gray alt-font display-block font-weight-600">{{ service.title|capitalize }}</span></a>
                        <p class="width-75 md-width-100">{{ service.content|truncate(90, true, '...') }}</p>
                    </div>
                </div>
                <!-- end feature box item -->
               {% endfor %}
            </div>
            <!-- start feature box -->
        </div>
    </section>
    <!-- end story section -->

    <!-- start Team work section -->
    <section class="no-padding wow fadeIn bg-extra-dark-gray" id="services">
        <div class="container-fluid no-padding">
            <div class="row equalize sm-equalize-auto no-margin">
                <div class="col-md-6 col-sm-12 col-xs-12 position-relative sm-height-550px xs-height-350px cover-background wow slideInLeft" data-wow-duration="900ms" style="background-image: url({{ asset('build/global/images/homepage-9-parallax-img4.jpg') }});"></div>
                <div class="col-md-6 col-sm-12 col-xs-12 display-table wow slideInRight last-paragraph-no-margin" data-wow-duration="900ms">
                    <div class="display-table-cell vertical-align-middle padding-fifteen-all sm-padding-ten-all xs-padding-30px-all sm-text-center">
                        <span class="text-medium margin-20px-bottom sm-margin-15px-bottom display-block alt-font xs-margin-15px-bottom">{{ 'Notre equipe' }}</span>
                        <h4 class="alt-font text-light-gray">{{ 'Teamwork builds trust and the trust build growth.
' }}</h4>
                        <p class="width-80 md-width-100 xs-width-100">Elle regroupe aussi tous les acteurs des NTIC: développeurs, webdesigners, intégrateurs, administrateur système, tous encadrés par des chefs de projets diplômés d'enseignement supérieur (Ingénieurs, DESS, MBA...) vous proposant des prestations de services différenciées tout en  mettant les Hommes au centre de son modèle économique</p>
                        <a href="{{ path('contact') }}" class="btn btn-small btn-white btn-rounded margin-35px-top sm-margin-25px-top">{{ 'Ameliorez ou commencez votre business avec nous' }}</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end Team work section -->

    <!-- start clients slider section  -->
    <section class="no-padding-bottom wow fadeIn">
        <div class="container text-center">
            <div class="row">
                <div class="swiper-slider-clients swiper-container black-move wow fadeIn">
                    <div class="swiper-wrapper">
                        {% for partner in partners %}
                            <!-- start slide -->
                            <div class="swiper-slide text-center"><a href="{{ path('contact') }}"><img src="{{ partner.assertPath|imagine_filter('thumb_partner_250_250') }}" alt="{{ partner.name }}"></a></div>
                            <!-- end slide -->
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end clients slider section -->

    <!-- start blog section -->
    <section class="wow fadeIn hover-option4 blog-post-style3">
        <div class="container">
            <div class="row padding-25px-bottom">
                <div class="col-lg-8 col-md-8 center-col text-center last-paragraph-no-margin">
                    <h5 class="alt-font text-extra-dark-gray text-uppercase font-weight-700">{{ 'astuces & informations' }}</h5>
                </div>
            </div>
            <div class="row equalize xs-equalize-auto">
                {% if posts|length > 0 %}
                    {% for post in posts %}
                        <!-- start blog post item -->
                        <div class="grid-item col-md-4 col-sm-6 col-xs-12 wow fadeInUp sm-padding-30px-bottom xs-text-center">
                            <div class="blog-post bg-light-gray inner-match-height">
                                <div class="blog-post-images overflow-hidden position-relative">
                                    <a href="{{ path('detail_blog', {'slug': post.slug}) }}">
                                        <img src="{{ post.assertPath|imagine_filter('thumb_590_300') }}" alt="">
                                        <div class="blog-hover-icon"><span class="text-extra-large font-weight-300">+</span></div>
                                    </a>
                                </div>
                                <div class="post-details padding-40px-all sm-padding-20px-all">
                                    <a href="{{ path('detail_blog', {'slug' : post.slug }) }}" class="alt-font post-title text-medium text-extra-dark-gray width-100 display-block md-width-100 margin-15px-bottom">{{ post.title }}</a>
                                    <p>{{ post.content|truncate('250', true, '...')|raw }}</p>
                                    <div class="separator-line-horrizontal-full bg-medium-gray margin-20px-tb sm-margin-15px-tb"></div>
                                    <div class="author">
                                        <span class="text-medium-gray text-uppercase text-extra-small display-inline-block sm-display-block sm-margin-10px-top">par <a href="{{ path('about') }}" class="text-medium-gray"> Admin </a>&nbsp;&nbsp;|&nbsp;&nbsp; {{ post.created|localizeddate('long', 'long', null, 'UTC') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end blog post item -->
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </section>
    <!-- end blog section -->
{% endblock %}

{% extends 'admin.html.twig' %}

{% block title %} {{ 'Formation' }} {% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des formation'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('formation_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for formation in formations %}
                        <tr>
                            <td>{{ formation.title }}</td>
                            <td>
                                <a href="{{ path('formation_show', {'id': formation.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('formation_edit', {'id': formation.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun contenu trouver</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
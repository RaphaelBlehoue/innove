{% extends 'base.html.twig' %}
{% block title %}
    {{ 'Intégrateur de solutions innovantes' }}
{% endblock %}
{% block base_nav %} {{ include('front/includes/nav.html.twig',{'nav_class':'c-layout-header-4 c-layout-header-default-mobile'}) }} {% endblock %}
{% block slide %}
    {{ include('front/includes/slide.html.twig') }}
{% endblock %}
{% block body %}
    <!-- BEGIN: CONTENT/CABINET -->
    <div class="c-content-box c-size-md c-no-padding c-bg-white">
        <div class="c-content-feature-4">
            <div class="c-bg-parallax c-feature-bg c-content-right c-arrow c-border-left-white" style="background-image: url({{ asset('build/web/static/home_about.jpg') }})"></div>
            <div class="c-content-area c-content-left"></div>
            <div class="container">
                <div class="c-feature-content c-left">
                    <div class="c-content-v-center">
                        <div class="c-wrapper">
                            <div class="c-body">
                                <div class="c-content-title-1 animated wow fadeInDown" data-wow-delay="0.2s">
                                    <h3 class="c-font-uppercase c-font-bold c-left">{{ 'La société INNOVE-IT & CONSULTING'|upper }}</h3>
                                    <div class="c-line-left"></div>
                                </div>
                                <div class="c-content animated wow fadeInDown" data-wow-delay="0.7s">
                                    <p class="c-margin-b-30 c-left">
                                        {{ 'Est une équipe innovante avec des talents, des compétences, de l\'expérience des savoir-faire et des savoirs-être engagés à réussir vos projets à court et à long termes dans le domaine des TIC. Elle est spécialisée dans les environnements systèmes: système d’information, systèmes de gestion informatisée, réseau & télécoms.' }}
                                    </p>
                                    <a href="{{ path('about') }}" class="btn btn-lg c-btn-green c-btn-border-2x c-btn-square c-btn-bold wow animated fadeIn" data-wow-delay="1s">{{ 'découvrir qui nous sommes en détail'|upper }}</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/CABINET -->

    <!-- BEGIN: CONTENT/SOLUTION QUE NOUS OFFRONS -->
    <div class="c-content-box c-size-md c-bg-img-center c-bg-grey-1">
        <div class="container">
            <div class="c-content-title-1 wow animated fadeIn">
                <h3 class="c-center c-font-uppercase c-font-bold">{{ 'les solutions que nous offrons par domaine de gestion'|upper }}</h3>
                <div class="c-line-center c-theme-bg"></div>
                <div class="row">
                    <div class="c-content-blog-post-card-1-grid">
                        <div class="row">
                            {% if sections|length > 0 %}
                                {% for section in sections %}
                                    <div class="col-md-4">
                                        <div class="c-content-blog-post-card-1 c-option-2 c-bordered box-shadow c-shadow">
                                            <div class="c-body c-bg-green-1 c-padding-20 c-center" style="height: 150px;">
                                                <h3 class="c-font-19 c-line-height-28 c-font-uppercase c-font-white c-font-bold">
                                                    {{ section.name }}
                                                </h3>
                                            </div>
                                            <div class="c-body">
                                                <p>{{ section.content|striptags('<a>')|truncate(110, true, '...')|raw }}</p>
                                                <div class="c-content-divider">
                                                    <i class="icon-dot"></i>
                                                </div>
                                                <div class="c-center">
                                                    <a href="{{ path('section_solution_page', {'slug': section.slug}) }}" class="btn btn-sm c-btn-green-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">{{  'je suis intéressé' }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/SOLUTION QUE NOUS OFFRONS -->

    <!-- BEGIN: CONTENT/SERVICE QUE NOUS OFFRONS -->
    <div class="c-content-box c-size-md c-bg-white c-bg-parallax" style="background-image: url({{ asset('build/web/static/service_bg.jpg') }})">
        <div class="container">
            <div class="c-content-feature-2-grid" data-auto-height="true" data-mode="base-height">
                <div class="c-content-title-1">
                    <h3 class="c-font-uppercase c-center c-font-bold c-font-white">{{ 'Ce que nous vous offrons comme services' }}</h3>
                    <div class="c-line-center"></div>
                </div>
                <div class="row">
                    <div class="c-content-blog-post-card-1-grid">
                        <div class="row">
                        {% if services|length > 0 %}
                            {% for service in services %}
                            <div class="col-md-4 col-sm-6">
                                <div class="c-content-feature-2  c-shadow" data-height="height">
                                    <div class="c-body">
                                        <h3 class="c-font-uppercase c-font-bold c-theme-font c-center c-title">{{ service.title }}</h3>
                                    </div>
                                    <div class="c-body c-margin-b-50">
                                        <p>{{ service.content|striptags('<a>')|truncate(160, true, '...')|raw }}</p>
                                    </div>
                                    <div class="c-center">
                                        <a href="{{ path('service_page', {'slug': service.slug}) }}" class="btn btn-sm c-btn-green-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">{{  'J\'ai besoin de ce service' }}</a>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/SERVICES QUE NOUS OFFRONS -->

    <!-- BEGIN: CONTENT/les secteurs dans lesquels nous intervenons -->
    <div class="c-content-box c-size-md c-bg-grey-1">
        <div class="container">
            <div class="c-content-feature-10">
                <!-- Begin: Title 1 component -->
                <div class="c-content-title-1">
                    <h3 class="c-font-uppercase c-center c-font-bold">{{ 'les secteurs dans lesquels nous intervenons' }}</h3>
                    <div class="c-line-center c-theme-bg"></div>
                    <p class="c-font-center">{{ 'Cliquez sur votre domaine d\'activité pour avoir plus d\'informations sur ce que nous pouvons vous offrir' }}</p>
                </div>
                <!-- End-->
                <div class="row">
                    <div class="c-content-blog-post-card-1-grid">
                        <div class="row">
                            {% if activities|length > 0 %}
                                {% for activity in activities %}
                                    <div class="col-md-4">
                                        <div class="c-content-blog-post-card-1 c-option-2 c-bordered box-shadow c-shadow">
                                            <div class="c-media c-content-overlay">
                                                <div class="c-overlay-wrapper">
                                                    <div class="c-overlay-content">
                                                        <a href="{{ path('secteurs_activity_detail', {'slug': activity.slug }) }}" title="{{ activity.name }}"><i class="icon-link"></i></a>
                                                    </div>
                                                </div>
                                                <img class="c-overlay-object img-responsive"  src="{{ activity.assertPath|imagine_filter('thumb_550_350') }}" alt="{{ activity.name }}">
                                            </div>
                                            <div class="c-body">
                                                <div class="c-title c-font-bold c-font-uppercase c-center">
                                                    <a href="{{ path('secteurs_activity_detail', {'slug': activity.slug }) }}">{{ activity.name }}</a>
                                                </div>
                                                <div class="c-content-divider c-icon-bg">
                                                    <i class="icon-drop c-rounded c-font-white"></i>
                                                </div>
                                                <p>{{ activity.content |striptags('<a>')|truncate(150, true, '...')|raw }}</p>
                                                <div class="c-center">
                                                    <a href="{{ path('secteurs_activity_detail', {'slug': activity.slug }) }}" class="btn btn-sm c-btn-green-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">{{  'plus de détail' }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BEGIN: CONTENT/DEVIS -->
    <div class="c-content-box c-size-md c-bg-parallax" style="background-image: url({{ asset('build/web/static/contact_bg.jpg') }})">
        <div class="container">
            <div class="c-content-bar-4">
                <h3 class="c-font-uppercase c-font-bold">{{ 'Nous avons la solution qu\'il vous faut' }}</h3>
                <div class="c-actions">
                    <a href="{{ path('contact') }}" class="btn btn-md c-btn-green-1 c-btn-uppercase c-btn-square c-btn-bold c-margin-b-100">{{ 'j\'ai besoins d\'un devis' }}</a>
                </div>
            </div>
        </div>
    </div>
    <!-- END: CONTENT/BARS/BAR-5 -->

    <!-- END: CONTENT/SOLUTION QUE NOUS OFFRONS -->
    <section id="about">
        <!-- BEGIN: CONTENT/MISC/ABOUT-1 -->
        <div class="c-content-box c-size-md c-bg-white">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 wow animated fadeInLeft">
                        <!-- Begin: Title 1 component -->
                        <div class="c-content-title-1">
                            <h3 class="c-font-uppercase c-font-bold">{{ 'La solution de l’envisageable à l’indispensable' }}</h3>
                            <div class="c-line-left c-theme-bg"></div>
                        </div>
                        <!-- End-->
                        <p>Intégrateur Sage, EBP, Ciel et diverses solutions informatiques Audit-Evolution-Conseils-Paramétrage-Formation-Assistance</p>
                    </div>
                    <div class="col-sm-6 wow animated fadeInRight">
                        <div class="c-content-client-logos-1">
                            <!-- Begin: Title 1 component -->
                            <div class="c-content-title-1">
                                <h3 class="c-font-uppercase c-font-bold">{{ 'Partenaires certifiées' }}</h3>
                                <div class="c-line-left c-theme-bg"></div>
                            </div>
                            <!-- End-->
                            <div class="c-logos">
                                <div class="row">
                                    {% if partners|length > 0 %}
                                        {% for partner in partners %}
                                        <div class="col-md-4 col-xs-6 c-logo c-logo-1">
                                            <a href="#"><img class="c-img-pos" src="{{ partner.assertPath|imagine_filter('thumb_180_140') }}" alt="{{ partner.name }}"/></a>
                                        </div>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- END: CONTENT/MISC/ABOUT-1 -->
    </section>
    <!-- END: CONTENT/SOLUTION QUE NOUS OFFRONS -->

    <!-- BEGIN: CONTENT/ACTU -->
    <div class="c-content-box c-size-md c-bg-grey-1">
        <div class="container">
            <!-- Begin: Testimonals 1 component -->
            <div class="c-content-blog-post-card-1-slider" data-slider="owl">
                <!-- Begin: Title 1 component -->
                <div class="c-content-title-1">
                    <h3 class="c-center c-font-uppercase c-font-bold">{{ 'Profitez de nos conseils d\'expertises'|upper }}</h3>
                    <div class="c-line-center c-theme-bg"></div>
                </div>
                <!-- End-->
                <!-- Begin: Owlcarousel -->
                <div class="owl-carousel owl-theme c-theme c-owl-nav-center" data-items="3" data-slide-speed="8000" data-rtl="false">
                    {% if posts|length > 0 %}
                        {% for post in posts %}
                            <div class="item">
                                <div class="c-content-blog-post-card-1 c-option-2">
                                    <div class="c-media c-content-overlay">
                                        <div class="c-overlay-wrapper">
                                            <div class="c-overlay-content">
                                                <a href="{{ path('detail_blog', {'slug': post.slug}) }}"><i class="icon-link"></i></a>
                                                <a href="{{ post.assertPath|imagine_filter('thumb_590_300') }}" data-lightbox="fancybox" data-fancybox-group="gallery">
                                                    <i class="icon-magnifier"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <img class="c-overlay-object img-responsive" src="{{ post.assertPath|imagine_filter('thumb_590_300') }}" alt="">
                                    </div>
                                    <div class="c-body">
                                        <div class="c-title c-font-uppercase c-font-bold">
                                            <a href="{{ path('detail_blog', {'slug': post.slug}) }}">{{ post.title }}</a>
                                        </div>
                                        <div class="c-author">
                                            Par <a href="{{ path('detail_blog', {'slug': post.slug}) }}"><span class="c-font-uppercase">{{ 'Admin' }}</span></a>
                                            Le <span class="c-font-uppercase">{{ post.created|date('d m Y') }}</span>
                                        </div>

                                        <div class="c-panel">
                                            <ul class="c-tags c-theme-ul-bg">
                                                <li>{{ post.activity.name }}</li>
                                            </ul>
                                        </div>
                                        <p>{{ post.content |striptags('<a>')|truncate(150, true, '...')|raw }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="c-center">
                    <a href="{{ path('blog') }}" class="btn btn-sm c-btn-green-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">{{'Consultez tous nos articles' }}</a>
                </div>
                <!-- End-->
            </div>
            <!-- End-->
        </div>
    </div>
    <!-- END: CONTENT/ACTU -->


{% endblock %}
{% block javascripts %}
    <!-- BEGIN: PAGE SCRIPTS -->
    <script src="{{ asset('build/layout/assets/plugins/revo-slider/js/extensions/revolution.extension.kenburn.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('build/layout/assets/plugins/revo-slider/js/extensions/revolution.extension.parallax.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('build/layout/assets/base/js/slide.js') }}" type="text/javascript"></script>
    <!-- END: PAGE SCRIPTS -->
{% endblock %}
{% extends 'admin.html.twig' %}
{% block title %} {{ 'Solutions' }} {% endblock %}
{% block body %}
    <div class="col-6 col-md-offset-6">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Solutions détail'|upper }}</h4>
                {{ include('solution/_delete_form.html.twig') }}
            </header>
            <img class="card-img-top" src="{{ asset(solution.assertPath) }}" alt="Card image cap">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ 'Nom' }}</th>
                        <td>{{ solution.name }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Descript' }}</th>
                        <td>{{ solution.content }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Document' }}</th>
                        <td>{{ solution.reader }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Date de creation' }}</th>
                        <td>{{ solution.created ? solution.created|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-label btn-dark" href="{{ path('solution_index') }}">
                    <label><i class="ti-arrow-left"></i></label>
                    {{ 'Retour à la liste'}}
                </a>
                <a class="btn btn-label btn-danger" href="{{ path('solution_edit', {'id': solution.id}) }}">
                    <label><i class="ti-pencil-alt"></i></label>
                    {{ 'Modifier' }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'admin.html.twig' %}

{% block title %}Solution{% endblock %}

{% block body %}
    <h1>Solution</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ solution.id }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ solution.imageSize }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ solution.imageName }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ solution.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ solution.content }}</td>
            </tr>
            <tr>
                <th>Reader</th>
                <td>{{ solution.reader }}</td>
            </tr>
            <tr>
                <th>Service_link</th>
                <td>{{ solution.serviceLink }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ solution.created ? solution.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('solution_index') }}">back to list</a>

    <a href="{{ path('solution_edit', {'id': solution.id}) }}">edit</a>


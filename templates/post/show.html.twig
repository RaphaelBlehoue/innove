{% extends 'admin.html.twig' %}
{% block title %} {{ 'Actualité' }} {% endblock %}
{% block body %}
    <div class="row">
        <div class="container">
            <div class="col-6 col-lg-offset-6">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title">{{ 'Actualité détail'|upper }}</h4>
                        {{ include('post/_delete_form.html.twig') }}
                    </header>
                    <img class="card-img-top" src="{{  asset(post.assertPath) }}" alt="Card image cap">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>{{ 'Titre' }}</th>
                                <td>{{ post.title }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'Contenu' }}</th>
                                <td>{{ post.content|raw }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'Date de creation' }}</th>
                                <td>{{ post.created ? post.created|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-label btn-dark" href="{{ path('post_index') }}">
                            <label><i class="ti-arrow-left"></i></label>
                            {{ 'Retour à la liste'}}
                        </a>
                        <a class="btn btn-label btn-danger" href="{{ path('post_edit', {'id': post.id}) }}">
                            <label><i class="ti-pencil-alt"></i></label>
                            {{ 'Modifier' }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'admin.html.twig' %}

{% block title %} {{ 'Actualités' }} {% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                <h4 class="card-title">{{ 'Liste des articles'|upper }}</h4>
                <a class="btn btn-label btn-info" href="{{ path('post_new') }}">
                    <label><i class="ti-plus"></i></label>
                    {{ 'Ajouter un nouveau'}}
                </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>{{ 'Date creation' }}</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>{{ 'Titre' }}</th>
                        <th>{{ 'Date creation' }}</th>
                        <th>actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.title }}</td>
                            <td>{{ post.created ? post.created|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Pas de contenu trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
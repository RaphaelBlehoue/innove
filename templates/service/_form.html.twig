<div class="card card-round card-shadowed px-50 py-30 w-700px mb-0" style="max-width: 100%">
    <h5 class="text-uppercase">{{ 'Section service'|upper }}</h5>
    <span class="badge-info badge">{{ 'Taille de l\'image récommandée :' }} <strong class="badge-danger badge">max: 619x436 & min:406x341 </strong></span>
    <br>
    {{ form_start(form, {'attr': {'class': 'card', novalidate: 'novalidate'} } ) }}
    <div class="form-group">
        {{ form_widget(form) }}
        {{ form_errors(form) }}
        <button class="btn btn-label {{ button_class|default('btn-info') }}">
            <label><i class="ti-save"></i></label>
            {{ button_label|default('Enregister') }}
        </button>
        <a class="btn btn-label btn-dark" href="{{ path('founder_index') }}">
            <label><i class="ti-arrow-left"></i></label>
            {{ 'Retour à la liste'}}
        </a>
    </div>
    {{ form_end(form) }}
</div>
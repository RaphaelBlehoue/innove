{% extends 'admin.html.twig' %}
{% block title %} {{ 'Famille de formation' }} {% endblock %}
{% block body %}
    <div class="col-12">
        <div class="card">
            <header class="card-header">
                    <h4 class="card-title">{{ 'Liste'|upper }}</h4>
                    <a class="btn btn-label btn-info" href="{{ path('family_former_new') }}">
                        <label><i class="ti-plus"></i></label>
                        {{ 'Ajouter un nouveau'}}
                    </a>
            </header>
            <div class="card-body">
                <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                    <thead>
                        <tr>
                            <th>{{ 'Titre' }}</th>
                            <th>{{ 'position affichage' }}</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Titre' }}</th>
                            <th>{{ 'position affichage' }}</th>
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                    {% for family_former in family_formers %}
                        <tr>
                            <td>{{ family_former.name }}</td>
                            <td>{{ family_former.position }}</td>
                            <td>
                                <a href="{{ path('family_former_show', {'id': family_former.id}) }}" class="btn btn-primary">{{ 'Afficher' }}</a>
                                <a href="{{ path('family_former_edit', {'id': family_former.id}) }}" class="btn btn-danger">{{ 'Modifier' }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
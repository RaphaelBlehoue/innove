 {% extends 'admin.html.twig' %}

{% block title %} {{ 'Partenaires' }} {% endblock %}

{% block body %}
        <div class="col-6">
            <div class="card">
                <header class="card-header">
                    <h4 class="card-title">{{ 'Informations Type de partenaire'|upper }}</h4>
                    {{ include('partner/_delete_form.html.twig') }}
                </header>
                <img class="card-img-top" src="{{ asset(partner.assertPath) }}" alt="Card image cap">
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ partner.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ partner.name }}</td>
                        </tr>
                        <tr>
                            <th>Website</th>
                            <td>{{ partner.website }}</td>
                        </tr>
                        <tr>
                            <th>Created</th>
                            <td>{{ partner.created ? partner.created|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a class="btn btn-label btn-dark" href="{{ path('partner_index') }}">
                        <label><i class="ti-arrow-left"></i></label>
                        {{ 'Retour Ã  la liste'}}
                    </a>
                    <a class="btn btn-label btn-danger" href="{{ path('partner_edit', {'id': partner.id}) }}">
                        <label><i class="ti-pencil-alt"></i></label>
                        {{ 'Modifier' }}
                    </a>
                </div>
            </div>
        </div>
 {% endblock %}
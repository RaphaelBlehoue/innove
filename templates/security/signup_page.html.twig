{% extends 'security.html.twig' %}
{% block title %} {% endblock %}
{% block body %}
    <div class="col-12">
      <div class="card card-shadowed px-50 py-30 w-450px mx-auto" style="max-width: 100%">
        <h5 class="text-uppercase">{{ 'Admin inscription' }}</h5>
        <br>
        {{ form_start(form, {'method': 'post', 'action': path('register'), 'attr': {'class': 'form-type-material', novalidate: 'novalidate'} } ) }}
        {% set class = 'form-control' %}
            <div class="form-group">
              <label for="lastname">{{ 'Entrez votre Nom' }}</label>
                {{ form_widget(form.lastname, {'attr': {'class' :class}}) }}
                {{ form_errors(form.lastname) }}
            </div>
            <div class="form-group">
              <label for="firstname">{{ 'Entrez votre Prénom' }}</label>
                {{ form_widget(form.firstname, {'attr': {'class' :class}}) }}
                {{ form_errors(form.firstname) }}
            </div>
            <div class="form-group">
              <label for="firstname">{{ 'Entez une adresse Email' }}</label>
                {{ form_widget(form.email, {'attr': {'class' : class}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
              <label for="password">{{ ' Mot de passe' }}</label>
                {{ form_widget(form.plainPassword, {'attr': {'class' :class}}) }}
                {{ form_errors(form.plainPassword) }}
            </div>
            <div class="form-group">
              <button class="btn btn-bold btn-block btn-primary" type="submit">{{ 'Créer mon compte' }}</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
